#index-page {
  background: #eee;
}

swiper {
  height: 400rpx;
}

.top-stories-item {
  height: 100%;
  background-size: cover;
  position: relative;
}

.top-stories-item-text {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column-reverse;
  box-sizing: border-box;
  padding: 60rpx 30rpx;
}

.top-stories-item-text text {
  color: white;
  text-shadow: 0px 1px 2px rgba(0,0,0,0.3);
}

#stories-list {
  padding: 30rpx;
}

#stories-time {
  display: block;
  color: #717171;
  padding: 15rpx 0;
  font-size: 25rpx;
}

.stories-list-item {
  display: flex;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 20rpx 0;
  background: white;
  box-shadow: 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12);
}

.stories-list-item text {
  display: block;
  flex-grow: 1;
  font-size: 27rpx;
  margin-right: 30rpx;
}

.stories-list-item image {
  width: 120rpx;
  height: 120rpx;
}
